{
    "homepage": "https://music.163.com/",
    "description": "The official NetEase Cloud Music client.",
    "version": "2.9.9.199909",
    "license": {
        "identifier": "EULA",
        "url": "https://music.163.com/html/web2/service.html"
    },
    "url": "https://d1.music.126.net/dmusic/cloudmusicsetup2.9.9.199909.exe#/dl.7z",
    "hash": "dfa07efeb984fe10dc2527461a4ea34121f3d8b42b5cda6ee61beabec12e9e2e",
    "installer":{
        "script":[
            "Get-ChildItem \"$dir\\redist_packages\" | Move-Item -Destination \"$dir\" -Force",
            "ensure $persist_dir | Out-Null",
            "$UserData = \"$env:LOCALAPPDATA\\Netease\\CloudMusic\"",
            "$UserDataPersist = \"$persist_dir\\CloudMusic\"",
            "if (Test-Path $UserDataPersist) {",
            "    Remove-Item $UserData -Force -Recurse -ErrorAction SilentlyContinue",
            "} else {",
            "    if (Test-Path $UserData) {",
            "        Move-Item $UserData $persist_dir -Force",
            "    } else {",
            "        New-Item $UserDataPersist -Type Directory -Force | Out-Null",
            "    }",
            "}",
            "New-Item -Type Junction -Path $UserData -Target $UserDataPersist | Out-Null"
        ]
    },
    "post_install": "Remove-Item \"$dir\\`$PLUGINSDIR\",\"$dir\\redist_packages\" -Force -Recurse",
    "uninstaller": {
        "script": [
            "Remove-Item \"$env:LOCALAPPDATA\\Netease\\CloudMusic\" -Force -Recurse -ErrorAction SilentlyContinue"
        ]
    },
    "bin": "cloudmusic.exe",
    "shortcuts": [
        [
            "cloudmusic.exe",
            "网易云音乐"
        ]
    ],
    "checkver": {
        "script": "return (iwr -useb 'https://music.163.com/api/pc/package/download/latest' -Method Head).Headers['x-nos-object-name']",
        "regex": "cloudmusicsetup(?<version>[\\d.]+\\d)(?<bug>.*?).exe"
    },
    "autoupdate": {
        "url": "https://d1.music.126.net/dmusic/cloudmusicsetup$version$matchBug.exe#/dl.7z"
    },
    "notes": "User data are now saved into '$persist_dir\\CloudMusic\\' and persisted by Scoop."
}
