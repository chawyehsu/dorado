        "}"
    ],
    "persist": [
        "config.ini",
        "userInfo.json",
        "Logs"
    ],
    "shortcuts": [
        [
            "ToDesk.exe",
            "ToDesk"
        ]
    ],
   "checkver": {
        "url": "https://www.todesk.com/download.html",
        "regex": "(?s)(\\d+)\\.(\\d+)\\.(?<code>\\d+[a-z]?)\\s*.*?</p>[\\s\\S]*?(?<year>\\d+)-",
        "replace":"${1}.${2}.${code}"
    },
    "autoupdate": {
        "url": "https://update.todesk.com/setup_$matchYear$matchCode.exe#/dl.7z"
