{
    "version": "0.3.2",
    "description": "Manage multiple MoonBit installations",
    "homepage": "https://github.com/chawyehsu/moonup",
    "license": "Apache-2.0",
    "architecture": {
        "64bit": {
            "url": "https://github.com/chawyehsu/moonup/releases/download/v0.3.2/moonup-x86_64-pc-windows-msvc.zip",
            "hash": "3f1f24eaa64b3d7f93f8218f4ceb0acaa00d0452f737a3e52a5e6156d863338b"
        }
    },
    "bin": "moonup.exe",
    "checkver": {
        "github": "https://github.com/chawyehsu/moonup",
        "regex": "v([\\d.]+(-\\w+.\\d+)?)"
    },
    "installer": {
        "script": "Add-Path \"$env:USERPROFILE\\.moon\\bin\" $global"
    },
    "uninstaller": {
        "script": "Remove-Path \"$env:USERPROFILE\\.moon\\bin\" $global"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/chawyehsu/moonup/releases/download/v$version/moonup-x86_64-pc-windows-msvc.zip"
            }
        },
        "hash": {
            "url": "$url.sha256",
            "regex": "([a-f0-9]{64})"
        }
    }
}
