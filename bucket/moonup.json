{
    "version": "0.3.0",
    "description": "Manage multiple MoonBit installations",
    "homepage": "https://github.com/chawyehsu/moonup",
    "license": "Apache-2.0",
    "architecture": {
        "64bit": {
            "url": "https://github.com/chawyehsu/moonup/releases/download/v0.3.0/moonup-x86_64-pc-windows-msvc.zip",
            "hash": "8c54a2c3b136cd2f3ce311175d200ef4de5bb9083e47e79c5001c62acdb1c601"
        }
    },
    "bin": "moonup.exe",
    "checkver": {
        "github": "https://github.com/chawyehsu/moonup",
        "regex": "v([\\d.]+(-\\w+.\\d+)?)"
    },
    "installer": {
        "script": "Add-Path \"$env:USERPROFILE\\.moon\\bin\" $global"
    },
    "uninstaller": {
        "script": "Remove-Path \"$env:USERPROFILE\\.moon\\bin\" $global"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/chawyehsu/moonup/releases/download/v$version/moonup-x86_64-pc-windows-msvc.zip"
            }
        },
        "hash": {
            "url": "$url.sha256",
            "regex": "([a-f0-9]{64})"
        }
    }
}
