{
    "version": "0.1.4",
    "description": "Manage multiple MoonBit installations",
    "homepage": "https://github.com/chawyehsu/moonup",
    "license": "Apache-2.0",
    "architecture": {
        "64bit": {
            "url": "https://github.com/chawyehsu/moonup/releases/download/v0.1.4/moonup-x86_64-pc-windows-msvc.zip",
            "hash": "c7b288a33256034e8eb4394ad0172ee79ecf390032f6e4943f673a484a6aff71"
        }
    },
    "bin": "moonup.exe",
    "checkver": {
        "github": "https://github.com/chawyehsu/moonup",
        "regex": "v([\\d.]+(-\\w+.\\d+)?)"
    },
    "installer": {
        "script": "Add-Path \"$env:USERPROFILE\\.moon\\bin\" $global"
    },
    "uninstaller": {
        "script": "Remove-Path \"$env:USERPROFILE\\.moon\\bin\" $global"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/chawyehsu/moonup/releases/download/v$version/moonup-x86_64-pc-windows-msvc.zip"
            }
        },
        "hash": {
            "url": "$url.sha256",
            "regex": "([a-f0-9]{64})"
        }
    }
}
