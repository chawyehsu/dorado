{
    "homepage": "https://www.swift.org/",
    "description": "The Swift Programming Language (Nightly builds)",
    "license": "Apache-2.0",
    "version": "20260212.1",
    "architecture": {
        "64bit": {
            "url": "https://github.com/thebrowsercompany/swift-build/releases/download/20260212.1/installer-offline-amd64.exe",
            "hash": "8dacaf004de8013b3bf54cc3e5c909e42bf31ef970f17d5d45b7f0a4af2e2074"
        },
        "arm64": {
            "url": "https://github.com/thebrowsercompany/swift-build/releases/download/20260212.1/installer-offline-arm64.exe",
            "hash": "15a69d34e7880be5e2de0270816830a4dd79bac6e04b59b4b002f3c28e2b43f9"
        }
    },
    "depends": "main/wixtoolset",
    "suggest": {
        "python39": "versions/python39",
        "vcredist": "extras/vcredist2022"
    },
    "installer": {
        "script": [
            "wix.exe burn extract \"$dir\\$fname\" -o \"$dir\\extracted\" -oba \"$dir\\extracted\"",
            "$productVersion = '0.0.0'",
            "Get-ChildItem \"$dir\\extracted\\WixAttachedContainer\\*.msi\" | ForEach-Object {",
            "    if ($_.Name -match 'rtl.*.msi') {",
            "        Expand-MsiArchive $_ \"$dir\\Runtimes\\usr\\bin\"",
            "    } else {",
            "        Expand-MsiArchive $_ \"$dir\"",
            "    }",
            "}",
            "Rename-Item -Path \"$dir\\LocalApp\\Programs\\Swift\\Toolchains\\$($productVersion)+Asserts\" -NewName \"$dir\\LocalApp\\Programs\\Swift\\Toolchains\\Asserts\"",
            "Rename-Item -Path \"$dir\\LocalApp\\Programs\\Swift\\Toolchains\\$($productVersion)+NoAsserts\" -NewName \"$dir\\LocalApp\\Programs\\Swift\\Toolchains\\NoAsserts\"",
            "Move-Item -Path \"$dir\\LocalApp\\Programs\\Swift\\Platforms\\$productVersion\\*.platform\" -Destination \"$dir\\LocalApp\\Programs\\Swift\\Platforms\"",
            "Move-Item -Path \"$dir\\LocalApp\\Programs\\Swift\\Redistributables\\$productVersion\\*\" -Destination \"$dir\\LocalApp\\Programs\\Swift\\Redistributables\"",
            "Get-ChildItem \"$dir\\LocalApp\\Programs\\Swift\" | ForEach-Object {",
            "    Move-Item -Path \"$($_.FullName)\" -Destination \"$dir\\\" -Force",
            "}",
            "Remove-Item \"$dir\\Platforms\\$productVersion\" -Recurse | Out-Null",
            "Remove-Item \"$dir\\Redistributables\\$productVersion\" -Recurse | Out-Null",
            "@(\"$fname\", 'extracted', 'LocalApp', 'SourceDir') | ForEach-Object {",
            "    Remove-Item \"$dir\\$_\" -Recurse -ErrorAction SilentlyContinue | Out-Null",
            "}"
        ]
    },
    "env_add_path": [
        "Toolchains\\Asserts\\usr\\bin",
        "Runtimes\\usr\\bin"
    ],
    "env_set": {
        "SDKROOT": "$dir\\Platforms\\Windows.platform\\Developer\\SDKs\\Windows.sdk"
    },
    "checkver": {
        "github": "https://api.github.com/repos/thebrowsercompany/swift-build/releases?per_page=50",
        "regex": "tag/([\\d.]+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/thebrowsercompany/swift-build/releases/download/$version/installer-offline-amd64.exe"
            },
            "arm64": {
                "url": "https://github.com/thebrowsercompany/swift-build/releases/download/$version/installer-offline-arm64.exe"
            }
        }
    },
    "notes": [
        "Swift Toolchain does not bundle Python39 which is a requirement for LLDB to work.",
        "Please install Python39 from versions/python39 if you want to use the LLDB debugger."
    ]
}
