{
  "version": "0.55.2",
  "description": "GOG Galaxy 2.0 Community integration for Uplay.",
  "homepage": "https://github.com/FriendsOfGalaxy/galaxy-integration-uplay",
  "license": "Shareware",
  "depends": "dorado/gog-galaxy",
  "url": "https://github.com/FriendsOfGalaxy/galaxy-integration-uplay/releases/download/v0.55.2/windows.zip",
  "pre_install": [
    "$dest = \"$env:LOCALAPPDATA\\GOG.com\\Galaxy\\plugins\\installed\"",
    "if ( !(Test-Path $dest) ) { New-Item -Type Directory -Path $dest -Force}"
  ],
  "post_install": [
      "$dest = \"$env:LOCALAPPDATA\\GOG.com\\Galaxy\\plugins\\installed\\$app\"",
      "Move-Item -Force $dir\\* $dest"
  ],
  "uninstaller": {
    "script": [
      "$dest = \"$env:LOCALAPPDATA\\GOG.com\\Galaxy\\plugins\\installed\\$app\"",
      "if ( Test-Path $dest ) { Remove-Item -Recurse -Force $dest}"
    ]
  },
  "notes": "You should restart your GOG Galaxy.",
  "checkver": "github",
  "autoupdate": {
    "url": "https://github.com/FriendsOfGalaxy/galaxy-integration-uplay/releases/download/v$version/windows.zip"
  }
}
