{
  "version": "v0.53",
  "description": "GOG Galaxy 2.0 Community integration for Steam.",
  "homepage": "https://github.com/FriendsOfGalaxy/galaxy-integration-steam",
  "license": "Shareware",
  "depends": "dorado/gog-galaxy",
  "url": "https://github.com/FriendsOfGalaxy/galaxy-integration-steam/releases/download/v0.53/windows.zip",
  "pre_install": [
    "$tmp = \"$env:LOCALAPPDATA\\GOG.com\\Galaxy\\plugins\\installed\"",
    "if ( !(Test-Path $tmp) ) { New-Item -Type Directory -Path $tmp -Force}"
  ],
  "installer": {
    "script": [
      "$tmp = \"$env:LOCALAPPDATA\\GOG.com\\Galaxy\\plugins\\installed\\$app\"",
      "New-Item -Path $tmp -Type Junction -Value $dir -Force | Out-Null"
    ]
  },
  "uninstaller": {
    "script": [
      "$tmp = \"$env:LOCALAPPDATA\\GOG.com\\Galaxy\\plugins\\installed\\$app\"",
      "if ( (Test-Path $tmp) ) { Remove-Item -Recurse -Force $tmp}"
    ]
  },
  "notes": "You should restart your GOG Galaxy.",
  "checkver": "github",
  "autoupdate": {
    "url": "https://github.com/FriendsOfGalaxy/galaxy-integration-steam/releases/download/$version/windows.zip"
  }
}
