{
    "version": "v3.0.0",
    "description": "The leading WebAssembly Runtime supporting WASI and Emscripten",
    "homepage": "https://wasmer.io/",
    "license": "MIT",
    "innosetup": true,
    "architecture": {
        "64bit": {
            "url": "https://github.com/wasmerio/wasmer/releases/download/v3.0.0/wasmer-windows.exe",
            "hash": "98e57bbfdc1a11e2452f6952877cdefecc9754af9d46715b6ea02fde38b31b90"
        }
    },
    "pre_install": [
        "if (!(Test-Path \"$persist_dir\\wapm.toml\")) {",
        "    New-Item -Force -Path \"$persist_dir\\wapm.toml\" -ItemType File -Value \"[registry]`nurl = 'https://registry.wapm.io'\" | Out-Null",
        "}"
    ],
    "env_set": {
        "WASMER_DIR": "$dir",
        "WASMER_CACHE_DIR": "$dir\\cache"
    },
    "bin": [
        "bin\\wax.cmd",
        "bin\\wapm.exe",
        "bin\\wasmer.exe"
    ],
    "persist": [
        "globals",
        "wapm.toml"
    ],
    "checkver": {
        "github": "https://github.com/wasmerio/wasmer",
        "regex": "tag/([\\w.-]+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/wasmerio/wasmer/releases/download/$version/wasmer-windows.exe"
            }
        }
    }
}
