        "32bit": {
            "url": "https://download-installer.cdn.mozilla.net/pub/firefox/releases/109.0/win32/zh-CN/Firefox%20Setup%20109.0.exe#/firefox.7z",
            "hash": "sha512:4f8f2ff6f128c7563850729bca885e06bbc0feed3864391ca18863571b4d5deee9290044168fae0e4669f074a1a21326a1a2390e43d0faaff812d3aafdc542e7"
