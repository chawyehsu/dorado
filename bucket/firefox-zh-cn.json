        "32bit": {
            "url": "https://download-installer.cdn.mozilla.net/pub/firefox/releases/122.0/win32/zh-CN/Firefox%20Setup%20122.0.exe#/firefox.7z",
            "hash": "sha512:d2fd5fc9f74bb09c7344e1be1ce6b31459d5992bb6aae6f2476fd919654e101a71ac0035ae835e6103fc8b33fab7da28bc5b1b6dda43f8b8e4aa6d1608f3d31a"
